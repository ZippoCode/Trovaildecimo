<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_gray_300"
    android:orientation="vertical"
    tools:context=".fragments.matches.MatchesMessagesFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_matches_messages_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/message_layout" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:text="Scrivi il messaggio"
        app:layout_anchorGravity="bottom|end" />
</FrameLayout>