<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuovaPartita">

    <android.support.v7.widget.Toolbar
        android:id="@+id/nuova_partita_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orario_giorno_text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inserisci l'orario e il giorno"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_36dp" />

            <TextView
                android:id="@+id/nuova_partita_orario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/data_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_event_black_36dp"/>
            <TextView
                android:id="@+id/nuova_partita_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/aggiungi_numero_partecipanti_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero di partecipanti: " />

            <Button
                android:id="@+id/nuova_partita_numero_partecipanti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showPopupMenu"
                android:text="Seleziona il numero" />

            <TextView
                android:id="@+id/aggiungi_luogo_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scrivi il nome del campetto: " />

            <EditText
                android:id="@+id/nuova_partita_luogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/nuova_partita_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUOVA PARTITA" />
</LinearLayout>